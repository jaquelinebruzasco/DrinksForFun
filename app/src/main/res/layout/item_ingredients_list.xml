<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/default_margin">

    <TextView
        android:id="@+id/tv_item_measure"
        style="@style/Body.Info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/default_margin"
        android:paddingBottom="@dimen/default_margin"
        app:layout_constraintEnd_toStartOf="@id/tv_item_ingredient"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Measure1" />

    <TextView
        android:id="@+id/tv_item_ingredient"
        style="@style/Body.Info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/default_margin"
        android:textAlignment="textEnd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_item_measure"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Ingredient1" />

</androidx.constraintlayout.widget.ConstraintLayout>